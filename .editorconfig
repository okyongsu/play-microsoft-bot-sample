root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,xml}]
indent_style = space
indent_size = 4
continuation_indent_size = 8

[*.{scala,sbt}]
indent_style = space
indent_size = 2
continuation_indent_size = 4

[*.{bat,cmd}]
charset = latin1
end_of_line = crlf
indent_style = space
indent_size = 2
continuation_indent_size = 4

[*.conf]
indent_style = space
indent_size = 2
continuation_indent_size = 4
